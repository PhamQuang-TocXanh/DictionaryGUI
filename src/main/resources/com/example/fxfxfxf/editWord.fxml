         <font>
            <Font name="Arial Bold" size="20.0" />
         </font>
      </Label>
      <Label fx:id="word" alignment="CENTER" layoutX="22.0" layoutY="91.0" prefHeight="32.0" prefWidth="286.0" text="Word" textAlignment="CENTER">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
